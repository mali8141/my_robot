<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  >

    <xacro:include filename="inertial_macros.xacro"/>
    
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>
    
    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>
    
    <material name="black">
        <color rgba="0 0 0 1" />
    </material>
    

    <!-- BASE LINK -->
    <link name="base_link"> 

    </link>

    <!-- CHASSIS LINK-->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.21 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.21 0 0.065"/>
            <geometry>
                <box size="0.42 0.17 0.13"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.21 0 0.065"/>
            <geometry>
                <box size="0.42 0.17 0.13"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.75" x="0.42" y="0.17" z="0.13">
            <origin xyz="0.21 0 0.065" rpy="0 0 0"/> 
        </xacro:inertial_box>

    </link>

    <!-- REAR LEFT WHEEL -->

    <joint name="rear_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_left_wheel"/>
        <origin xyz="-0.16 0.1075 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="rear_left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.045" radius="0.05" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.045" radius="0.05" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.045" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- REAR RIGHT WHEEL -->

    <joint name="rear_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_right_wheel"/>
        <origin xyz="-0.16 -0.1075 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="rear_right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.045" radius="0.05" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.045" radius="0.05" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.045" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

        <!-- FRONT LEFT WHEEL -->

    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_left_wheel"/>
        <origin xyz="0.16 0.1075 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.045" radius="0.05" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.045" radius="0.05" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.045" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- FRONT RIGHT WHEEL -->

    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_right_wheel"/>
        <origin xyz="0.16 -0.1075 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.045" radius="0.05" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.045" radius="0.05" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.045" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

</robot>